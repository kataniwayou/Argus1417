{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenTelemetry": {
    "CollectorEndpoint": "http://localhost:4317"
  },
  "Argus": {
    "Coordinator": {
      "SnapshotIntervalSeconds": 30,
      "StartupGracePeriodMultiplier": 2.5
    },
    "K8sLayer": {
      "Kubernetes": {
        "Namespace": "argus",
        "ApiTimeoutSeconds": 30,
        "UseInClusterConfig": false
      },
      "K8sApi": {
        "CreateNocBehavior": {
          "SendToNoc": true,
          "Payload": "component=k8s-api,type=infrastructure,severity=critical",
          "SuppressWindow": "1m"
        },
        "CancelNocBehavior": {
          "SendToNoc": true,
          "Payload": "component=k8s-api,type=infrastructure,severity=info",
          "SuppressWindow": "5m"
        }
      },
      "PrometheusPod": {
        "LabelSelector": "app=prometheus",
        "ContainerName": "prometheus",
        "CreateNocBehavior": {
          "SendToNoc": true,
          "Payload": "component=prometheus,type=infrastructure,severity=critical",
          "SuppressWindow": "2m"
        },
        "CancelNocBehavior": {
          "SendToNoc": true,
          "Payload": "component=prometheus,type=infrastructure,severity=info",
          "SuppressWindow": "5m"
        }
      },
      "KsmPod": {
        "LabelSelector": "app.kubernetes.io/name=kube-state-metrics",
        "ContainerName": "kube-state-metrics",
        "CreateNocBehavior": {
          "SendToNoc": true,
          "Payload": "component=ksm,type=infrastructure,severity=critical",
          "SuppressWindow": "2m"
        },
        "CancelNocBehavior": {
          "SendToNoc": true,
          "Payload": "component=ksm,type=infrastructure,severity=info",
          "SuppressWindow": "5m"
        }
      },
      "RestartTracking": {
        "WindowSize": 5,
        "RestartThreshold": 3
      },
      "PollingIntervalSeconds": 15
    },
    "Watchdog": {
      "AlertName": "Watchdog",
      "TimeoutSeconds": 90,
      "CreateNocBehavior": {
        "SendToNoc": true,
        "Payload": "component=prometheus,type=watchdog,severity=critical",
        "SuppressWindow": "2m"
      },
      "CancelNocBehavior": {
        "SendToNoc": true,
        "Payload": "component=prometheus,type=watchdog,severity=info",
        "SuppressWindow": "5m"
      }
    },
    "DefaultNoc": {
      "CreateNocBehavior": {
        "SendToNoc": true,
        "Payload": "component=prometheus,type=alert,severity=critical",
        "SuppressWindow": "2m"
      },
      "CancelNocBehavior": {
        "SendToNoc": true,
        "Payload": "component=prometheus,type=alert,severity=info",
        "SuppressWindow": "5m"
      }
    },
    "AlertsVector": {
      "AlertTtl": "1h"
    },
    "LeaderElection": {
      "LeaseName": "argus-leader",
      "LeaseDurationSeconds": 15,
      "RenewIntervalSeconds": 10,
      "RetryIntervalSeconds": 10
    },
    "CentralTimer": {
      "TickIntervalSeconds": 5,
      "ExternalMonitor": {
        "HeartbeatIntervalSeconds": 30,
        "DestinationPath": "/var/argus/heartbeat_status.json",
        "StatusFileSystem": {
          "PollingIntervalSeconds": 30,
          "CreateNocBehavior": {
            "SendToNoc": true,
            "Payload": "component=status-filesystem,type=infrastructure,severity=critical",
            "SuppressWindow": "1m"
          },
          "CancelNocBehavior": {
            "SendToNoc": true,
            "Payload": "component=status-filesystem,type=infrastructure,severity=info",
            "SuppressWindow": "5m"
          }
        }
      }
    }
  }
}
